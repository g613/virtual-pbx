<html>
<!-- $Id: cidfilters.tt,v 1.14 2022/04/19 14:53:23 gosha Exp $ -->
<head>
	<title>Virtual PBX - CID фильтры - Ac:[% USER_CREDS.ACCESS_CODE | html %]</title>
	[% IF USER_CREDS.CSS_HREF eq '' %]
	<link rel="stylesheet" type="text/css" href="/xvb/xvb.css" />
	[% ELSE %]
	<link rel="stylesheet" type="text/css" href="[% USER_CREDS.CSS_HREF %]" />
	[% END %]
	<script language="JavaScript" src="/xvb/js/xvb.js"></script>
</head>

<body onLoad="XVBInit()">
	<center>
	
	<table width='100%'>
		<tr align='left'>
			<td width='8%'>
				<a href='?action=vb_view&id=[% VBOX_PREF.ID %]&uniq=[% USER_CREDS.UNIQ %]' title="Параметры номера"><span class='icon-cog fs0'></span></a>
			</td>
			<td align='center'>
			<h1>
		[% IF CID_LIST_TYPE eq '1' %]
			Черный список	
		[% ELSE %]
			Белый список
		[% END %]
		 для номера # [% VBOX_PREF.EXT_NUMBER | html %]
			</h1>
			</td>
			<td width='8%' align='right' nowrap='nowrap'>
				<a title='в формате excel' href='?action=cid_list&cid=[% CID | html %]&id=[% VBOX_PREF.ID %]&cid_list_type=[% CID_LIST_TYPE %]&cid_type=1&uniq=[% USER_CREDS.UNIQ %]&need_excel=1&from=all'"><span class='icon-file-excel fs0'></span></a>
				<a title='удалить все фильтры' href='?action=cid_del&drop_all=1&data_id=all&cid_type=1&cid_list_type=[% CID_LIST_TYPE %]&uniq=[% USER_CREDS.UNIQ %]' onclick="return DelConfirm('ru')" title='удалить все фильтры'><span class='icon-bin-all fs2'></span></a>
			</td>
		</tr>
	</table>
	
	<table width='100%'>
		<tr>
			<form method="post" action="[% CGI_URL %]" onSubmit='return checkChanges(this)' id='find-form'>
			<td align='right'>
				<input size='20' type='text' placeholder='CID' name='cid' value='[% CID | html %]'>
				&nbsp;
				<input value='Найти' type='submit'>
				<input name='action' value='cid_list' type='hidden'>
				<input name='uniq' value='[% USER_CREDS.UNIQ %]' type='hidden'>
				<input name='need_excel' value='' type='hidden' id='find-flt'>
				<input name='id' value='[% VBOX_PREF.ID %]' type='hidden'>
				<input name='cid_list_type' value='[% CID_LIST_TYPE %]' type='hidden'>
				<input name='cid_type' value='1' type='hidden'>
			</td>
			</form>
		</tr>
	</table>
		
	<table width='100%' id='d-tbl'>
		<tr>
			<th class='rad_l'>Номер звонящего</th>
			<th>Описание</th>
			<th class='rad_r'>&nbsp;</th>
		</tr>
		[% IF MSG_PREV ne '' %]
		<tr>
			<td align='left'>
				<a title='предыдущая станица' href='?action=cid_list&id=[% VBOX_PREF.ID %]&cid_list_type=[% CID_LIST_TYPE %]&cid_type=1&uniq=[% USER_CREDS.UNIQ %]&from=[% MSG_PREV %]&cid=[% CID | html %]'><span class='fs0'>◄</span></a>
			</td>
		</tr>
		[% END %]

		[% FOREACH param = CID_LIST %]
		<tr align='center' class='nocolor' id='d-tr-[% param.DATA_ID %]'>
		<form method="post" action="[% CGI_URL %]" id='f-[% param.DATA_ID %]' onSubmit='return xmlhttpPost(this,1)'>
			<input type='hidden' name='action' value='cid_update'>
			<input type='hidden' name='id' value='[% VBOX_PREF.ID %]'>
			<input type='hidden' name='data_id' value='[% param.DATA_ID %]'>
			<input type='hidden' name='uniq' value='[% USER_CREDS.UNIQ %]'>
			<input type='hidden' name='cid_list_type' value='[% CID_LIST_TYPE %]'>
			<input type='hidden' name='cid_type' value='1'>

			<td><input class='in_t0' size='50' name='cid' type='text' value='[% param.CID | html %]'></td>
			<td><input class='in_t0' size='60' name='description'  type='text' value='[% param.DESCRIPTION | html %]'></td>
	
			<td align='right' nowrap='nowrap'>
				<span class='in_t' id='in_t_id-[% param.DATA_ID %]'>
					<a href='#' onclick="return xmlhttpPost(document.getElementById('f-[% param.DATA_ID %]'),1);"><span class='icon-floppy-disk fs0 blink' title='сохранить изменения'></span></a>
					<noscript><input value='Сохранить изменения' type='submit'></noscript>
				</span>
				<a href='?action=cid_del&id=[% VBOX_PREF.ID %]&uniq=[% USER_CREDS.UNIQ %]&data_id=[% param.DATA_ID %]' onclick="return xmlhttpDel(this,'ru','d-tr-[% param.DATA_ID %]')" title='удалить запись'><span class='icon-bin fs0'></span></a>
			</td>
		</form>
		</tr>
		[% END %]
		
		[% IF MSG_NEXT ne '' %]
		<tr>
			<td align='right' colspan='3'>
				<a title='следующая станица' href='?action=cid_list&id=[% VBOX_PREF.ID %]&cid_list_type=[% CID_LIST_TYPE %]&cid_type=1&uniq=[% USER_CREDS.UNIQ %]&from=[% MSG_NEXT %]&cid=[% CID | html %]'><span class='fs0'>►</span></a>
			</td>
		</tr>
		[% END %]
		
		<tr align='center'>
		<form method="post" action="[% CGI_URL %]" onSubmit='return checkChanges(this)'>
			<input type='hidden' name='action' value='cid_add'>
			<input type='hidden' name='id' value='[% VBOX_PREF.ID %]'>
			<input type='hidden' name='uniq' value='[% USER_CREDS.UNIQ %]'>
			<input type='hidden' name='cid_list_type' value='[% CID_LIST_TYPE %]'>
			<input type='hidden' name='cid_type' value='1'>
			
			<td><input size='50'  name='cid' type='text'></td>
			<td><input size='60' name='description'  type='text'></td>
			
			<td align='center'>
				<input type='submit' value='Добавить'>
			</td>
		</form>
		</tr>
	</table>
	<span><a name="addarea">&nbsp;</a><span>

	<script language='JavaScript'>listcolorer( 'd-tbl' );</script>

	</center>
	<div id='shadow'><div id='loading'></div></div><div id='center'></div>
	</body>
</html>
	
