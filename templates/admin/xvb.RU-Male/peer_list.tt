<html>
<!-- $Id: peer_list.tt,v 1.3 2024/04/07 21:06:33 gosha Exp $ -->
<head>
	<title>Virtual PBX - SIP Peers</title>
	[% IF USER_CREDS.CSS_HREF eq '' %]
	<link rel="stylesheet" type="text/css" href="/xvb/xvb.css" />
	[% ELSE %]
	<link rel="stylesheet" type="text/css" href="[% USER_CREDS.CSS_HREF %]" />
	[% END %]
	<script language="JavaScript" src="/xvb/js/xvb.js"></script>
</head>

<body onLoad="XVBInit()">
	<table width='100%' class='logo'>
		<tr align='left'>
			<td width='10%'>
				<img border='0' width='120' src='/xvb/images/logo-small.png' alt='Virtual PBX' />
			</td>
			<td valign='middle'>
				[% INCLUDE main_menu.tt-inc %]
				[% INCLUDE main_menu.tt-inc-custom %]
			</td>
			<td align='right'>
				<a href='/xvb/XVB-AI.pdf?a=msg_download' title='документация'><span class='icon-question fs0'></span></a>
				[% INCLUDE version.tt %]
			<td>
		</tr>
	</table>
	<center>
	
	<h1>SIP шлюзы - [% SIPDEV_CNT %]</h1>

	<table width='100%'>
		<tr>
			<td align='right'>
				<form method="post" onSubmit='return checkChanges(this)'>
					<input size='15' name='host' type='text' placeholder='Прокси' value='[% HOST | html %]'>
					&nbsp;
					<input size='11' name='authname' type='text' placeholder='ID шлюза' value='[% AUTHNAME | html %]'>
					&nbsp;
					<input size='11' name='ac' type='text' placeholder='Код доступа' value='[% AC | html %]'>
					&nbsp;
					<select name="need_reg" id="status_need_reg_selector">
						<option value="" selected>регистрация</option>
						<option value="1">да</option>
						<option value="0">нет</option>
					</select>
					&nbsp;
					<select name="pbxmode" id="status_pbxmode_selector">
						<option value="" selected>режим-атс</option>
						<option value="1">да</option>
						<option value="0">нет</option>
					</select>
					&nbsp;
					<input type='hidden' value='peer_list' name='action'>
					<input value='Найти' type='submit'>
				</form>
			</td>
			<script language='JavaScript'>
				setActiveSelector('status_need_reg_selector',"[% NEED_REG %]");
				setActiveSelector('status_pbxmode_selector',"[% PBXMODE %]");
			</script>
		</tr>
	</table>
	
	<p>
	<table width='100%' id='d-tbl'>
		<tr>
			<th class='rad_l'>#</th>
			<th>Код доступа</th>
			<th>Аренатор</th>
			<th>Прокси</th>
			<th>Порт</th>
			<th>Домен</th>
			<th>АОН</th>
			<th>Ёмкость</th>
			<th colspan='2'>Входящие</th>
			<th>&nbsp;</th>
			<th colspan='2' class='rad_r'>ID шлюза</th>
		</tr>
		
		[% IF MSG_PREV ne '' %]
		<tr>
			<td align='left' colspan='12'>
				<a title='предыдущая страница' href='?action=peer_list&ac=[% AC | html %]&pbxmode=[% PBXMODE %]&need_reg=[% NEED_REG | html %]&host=[% HOST | html %]&from=[% MSG_PREV %]&authname=[% NAME | html %]'><span class='fs0'>◄</span></a>
			</td>
		</tr>
		[% END %]
		
		[% FOREACH p = SIPDEV %]
		<tr align='left' class='nocolor' id='d-tr-[% p.DATA_ID %]'>
			<td align='right'>[% p.IDX %]</td>
			<td class='simple'><a title='настройки арендатора' href='?ac=[% p.ACCESS_CODE %]&action=user_info'>[% p.ACCESS_CODE %]</a></td>
			<td>
				[% p.FIRST_NAME | html %] [% p.LAST_NAME | html %]
			</td>
			<td>
				<a href='#' class='l-info'>
				<span>[% p.host | html %]</span>
				<span class='l-info'>
					Name: [% p.DESCRIPTION | html  %]<br>
					Proto: [% p.transport | html %]<br>
					DTMF: [% p.dtmfmode | html %]<br>
					User: [% p.username | html %]<br>
				</span>
				</a>
			</td>
			<td>[% p.port | html %]</td>
			<td>[% p.fromdomain | html %]</td>
			<td>[% p.fromuser | html %]</td>
			<td>[% p.CO_LIMIT | html %]</td>
			
			<form method='post' id='f-[% p.DATA_ID %]' onSubmit='return xmlhttpPost(this,1)' action="">
			<td>
				<input class='in_t0' name='need_reg' type='checkbox' title='Incoming calls'
				[% IF p.NEED_REG eq '1' %]
				checked 
				[% END %]
				/>
			</td>
			<td>
			[% IF p.REG_DATA %]
					<a href='#' class='r-info'>
				[% IF p.REG_DATA.state eq 'Registered' %]
					<span class='fs1'>✓</span>
				[% ELSE %]
					<span class='icon-warning fs1'></span>
				[% END %]
					<span class='r-info'>
						[% p.REG_DATA.state | html %]
						[% IF p.host eq 'dynamic' %]
						<br>IP: [% p.ipaddr | html %]
						<br>UA: [% p.useragent | html %]
						[% END %]
					</span>
					</a>
			[% END %]
			</td>

			<td nowrap='nowrap'>

				<input class='in_t0' name='PBXMODE' type='checkbox' title='PBX MODE'
				[% IF p.setvar contain 'PBXMODE=1' %]
				checked 
				[% END %]
				/>
				<input type='hidden' value='[% p.DATA_ID %]' name='data_id'>
				<input type='hidden' value='pbx_mode_update' name='action'>
				<input type='hidden' name='user_id' value='[% p.SUBSCR_ID %]'>
				<input type='hidden' name='host' value='[% p.host | html %]'>
				<span class='in_t' id='in_t_id-[% p.DATA_ID %]'>
					<a href='#' onclick="return xmlhttpPost(document.getElementById('f-[% p.DATA_ID %]'),1);"><span class='icon-floppy-disk fs0 blink' title='сохранить изменения'></span></a>
					<noscript><input value='change' type='submit'></noscript>
				</span>
			</td>
			</form>
			<td>[% p.name %]</td>
			<td>
				[% IF p.host eq 'dynamic' %]
				<a title='изменить логин' href='?action=auth_name_reset&dtype=peer&id=[% p.name | html %]&pac=[% p.ACCESS_CODE | html %]&ac=[% AC | html %]&pbxmode=[% PBXMODE %]&need_reg=[% NEED_REG | html %]&host=[% HOST | html %]&from=[% MSG_NEXT %]&authname=[% NAME | html %]'><span class='icon-loop2 fs1'></span></a>
				[% END %]
			</td>
		</tr>
		[% END %]
	
		[% IF MSG_NEXT ne '' %]
		<tr>
			<td align='right' colspan='12'>
				<a title='предыдущая страница' href='?action=peer_list&ac=[% AC | html %]&pbxmode=[% PBXMODE %]&need_reg=[% NEED_REG | html %]&host=[% HOST | html %]&from=[% MSG_NEXT %]&authname=[% NAME | html %]'><span class='fs0'>►</span></a>
			</td>
		</tr>
		[% END %]
	</table>
	</p>

	<script language='JavaScript'>listcolorer( 'd-tbl' );</script>

	</center>
	
	[% INCLUDE main_menu2.tt-inc-custom %]
	
	<div id='shadow'><div id='loading'></div></div><div id='center'></div>
	</body>
</html>
